---
import Layout from '../layouts/Layout.astro'
import Header from '../components/Header.astro'
import Experience from '../components/Experience.astro'
import ExperienceEntry from '../components/ExperienceEntry.astro'

import ibm_logo from '../images/ibm-logo.webp'
import ucc_logo from '../images/ucc-logo.svg'

const title = 'Jack O\'Connor'
const link = '/'
const link_text = `${String.fromCodePoint(0x02190)}Home`
const link_on_right = false

 
const company = 'IBM'
const company_logo = ibm_logo
const role = 'Software engineer'
const dates = '2020 - 2021'
const skills = ['Skill 1', 'Skill 2']
---

<Layout title={'Résumé'} description={'Placeholder text'}>
    <Header title={title} link={link} link_text={link_text} link_on_right={link_on_right} />
    <div class='container'>
       <main>    
            <h1>Résumé</h1>
            <h2>Experience</h2>
            <Experience company={company} company_logo={company_logo} total_time={dates}>
                <ExperienceEntry role={role} dates={dates} skills={skills}
                    entry_number={1}>
                    <ul>
                        <li>Bullet point 1</li>
                        <li>Bullet point 2</li>
                        <li>Bullet point 3</li>
                    </ul>
                </ExperienceEntry>
                <ExperienceEntry role={role} dates={dates} skills={skills}
                    entry_number={2}>
                    <ul>
                        <li>Bullet point 1</li>
                        <li>Bullet point 2</li>
                        <li>Bullet point 3</li>
                    </ul>
                </ExperienceEntry>
            </Experience>
            <h2>Education</h2>
            <Experience company={'UCC'} company_logo={ucc_logo} 
                        total_time={'2019-2023'}>
                <ExperienceEntry role={'Data Science'} dates={dates} skills={skills}>
                    <ul>
                        <li>Bullet point 1</li>
                        <li>Bullet point 2</li>
                        <li>Bullet point 3</li>
                    </ul>
                </ExperienceEntry>
            </Experience>
            <h2>Certifications</h2>
            <Experience />
        </main>
    </div>
</Layout>

<style>
main {
    margin: auto;
    max-width: 800px;
}

h1 {
    text-align: center;
}

ul {
    padding: 0;
}

li {
    list-style-type: none;
    margin-bottom: 1rem;
}
</style>
